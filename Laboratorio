#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <string.h>

#define fil 20
#define col 20

struct telemento
{int mat[fil][col];
};
using namespace std;
void llenar_auto(telemento M[fil][col], int n);
void mostrar2 (telemento M[fil][col], int n);
void suma(telemento M[fil][col], int n);
void main()
{
	telemento MATRIX[fil][col];
	int n;
	cout<<"Ingrese numero de filas: ";
	cin>>n;
	llenar_auto(MATRIX,n);
	mostrar2(MATRIX,n);
	cout<<"La suma es: ";
	suma(MATRIX,n);
	getch();

}
void llenar_auto(telemento M[fil][col], int n)
{int i,j,k,l;
	for(i=0;i<n;i++)
		{for(j=0;j<n;j++)
			{for(k=0;k<n;k++)
				{for(l=0;l<n;l++)
				// Referencia a la matriz dentro de la matriz
					{	cout<<"M["<<i<<"]["<<j<<"]mat["<<k<<"]["<<l<<"]= ";
						cin>>M[i][j].mat[k][l];
					}
				}
			}
	}
}
 
void mostrar2 (telemento M[fil][col], int n)
{int i, j,k,l;
	for(i=0;i<n;i++)
		{for(j=0;j<n;j++)
			{for(k=0;k<n;k++)
				{for(l=0;l<n;l++)
					 {cout<<M[i][j].mat[k][l]<<"\t";
					 }cout<<endl;
				}cout<<"     "<<endl;
			}
		}
}
void suma(telemento M[fil][col], int n)
{int i,j,k,l,suma;
	for(i=0;i<n;i++)
		{for(j=0;j<n;j++)
			{suma=0;
				for(k=0;k<n;k++)
				{for(l=0;l<n;l++)
					{suma=suma+M[i][j].mat[k][l];
					}cout<<endl;
				}cout<<suma;
			}
	}
}
