#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"
using namespace std;
void main()
{
	int opcion,A,B;
	float lado,area,promedio,n1,n2,n3;
	do
	{
		cout<<"\t MENU \n\n";
		cout<<"1.Area del Cuadrado\n";
		cout<<"2.Promedio de tres numeros\n";
		cout<<"3.Mayor de dos numeros\n";
		cout<<"0.Salir\n";
		cout<<"Elige una opcion: ";
		cin>>opcion;
		switch(opcion)
		{
		case 1 : cout<<"Area del Cuadrado\n"; 
				 {
					 cout<<"Ingrese Lado: ";
					 cin>>lado;
					 area=lado*lado;
					 cout<<"El Area es: "<<area;
				 }
				 getch(); break;
		case 2 : cout<<"Promedio de tres numeros\n";
				 {
					 cout<<"Ingrese numero 1: ";
					 cin>>n1;
					 cout<<"Ingrese numero 2: ";
					 cin>>n2;
					 cout<<"Ingrese numero 3: ";
					 cin>>n3;
					 promedio=(n1+n2+n3)/3;
					 cout<<"El promedio es: "<<promedio;
				 }
				 getch(); break;
		case 3 : cout<<"Mayor de dos numeros\n";
				 {
					 cout<<"Ingrese primer numero: ";
					 cin>>A;
					 cout<<"Ingrese segundo numero: ";
					 cin>>B;
					 if(A>B)
					 {
						 cout<<"El mayor es: "<<A;
					 }
					 else
					 {
						 cout<<"El mayor es: "<<B;
					 }
				 }
				 getch(); break;
		case 0 : cout<<"Salir\n";
			getch(); break;
		default : cout<<"Error\n";
		}
		system("cls");
	}
	while(opcion!=0);
	getch();
}
