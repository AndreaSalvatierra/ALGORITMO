#include "stdafx.h"
#include "conio.h"
#include <iostream>

using namespace std;

void main()
{
float IVA=0.13,AFP=0.121,SB,SM=1400,SN,suma,SP;
int N,i=1;
suma=0;
cout<<"Ingrese el numero de Empleados: ";
cin>>N;
while(i<=N)
{
	cout<<"Ingrese salario bruto "<<i<<": ";
	cin>>SB;
	if(SB>(2*SM))
	{
		SN=SB-(SB*0.13)-(SB*0.121);
		suma=suma+SN;
	}
	else
	{
		SN=SB-(SB*0.121);
		suma=suma+SN;
	}
	i++;
}
SP=suma/N;
cout<<"El Promedio de los salarios es: "<<SP;
getch();
}
